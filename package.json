{
  "name": "tiki-design-system",
  "private": true,
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "eslint-config": "pnpm --filter @tiki/eslint-config",
    "icon": "pnpm --filter @tiki/icon",
    "icon:generate": "pnpm --filter @tiki/icon generateIcon",
    "color": "pnpm --filter @tiki/color",
    "font": "pnpm --filter @tiki/font",
    "ui": "pnpm --filter @tiki/ui",
    "tsconfig": "pnpm --filter @tiki/tsconfig",
    "test": "pnpm --filter test",
    "storybook": "pnpm --filter @tiki/storybook"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.1.3",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.6.2"
  }
}
